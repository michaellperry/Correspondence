<Application x:Class="Reversi.Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="Application_Startup">
    <Application.Resources>
        <Style
            x:Key="DisabledOnNull">
            <Style.Triggers>
                <DataTrigger
                    Binding="{Binding}"
                    Value="{x:Null}">
                    <Setter
                        Property="FrameworkElement.IsEnabled"
                        Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
